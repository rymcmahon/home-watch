<div class="container">
  <%= form_for :client, url: client_path(@client), method: :patch do |f| %>
    <% if @client.errors.any? %>
      <div class="alert alert-dismissible alert-danger">
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
        <h4 class="alert-validation">
          <%= pluralize(@client.errors.count, "error") %> prohibited
          this client from being updated:
        </h4>
          <% @client.errors.full_messages.each do |msg| %>
            <p><%= msg %></p>
          <% end %>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :first_name, class:"form-label" %>
      <%= f.text_field :first_name, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :last_name, class:"form-label" %>
      <%= f.text_field :last_name, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :street_address, class:"form-label" %>
      <%= f.text_field :street_address, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :unit, class:"form-label" %>
      <%= f.text_field :unit, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :phone_one, "Primary Phone", class:"form-label" %>
      <%= f.text_field :phone_one, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :phone_two, "Secondary Phone", class:"form-label" %>
      <%= f.text_field :phone_two, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :email_one, "Primary Email", class:"form-label" %>
      <%= f.text_field :email_one, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :email_two, "Secondary Email", class:"form-label" %>
      <%= f.text_field :email_two, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Update Client", class:"btn btn-success" %>
    </div>
  <% end %>
  <%= link_to 'Delete Client', client_path(@client), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
</div>
